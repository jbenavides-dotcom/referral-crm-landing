        "jsCode": "const body = $('Webhook').first().json.body;\nconst data = $input.first().json;\nconst rows = data.values || [];\nif (rows.length < 2) return [{ json: { found: false, error: 'No hay referidos registrados' } }];\n\nconst targetId = parseInt(body.referralId);\nif (isNaN(targetId)) return [{ json: { found: false, error: 'ID invalido' } }];\n\n// Buscar fila por ID (columna A)\nlet rowIndex = -1;\nlet existingRow = null;\nfor (let i = 1; i < rows.length; i++) {\n  if (parseInt(rows[i][0]) === targetId) {\n    rowIndex = i + 1; // 1-indexed for Sheets API\n    existingRow = rows[i];\n    break;\n  }\n}\n\nif (rowIndex === -1) return [{ json: { found: false, error: 'Referido #' + targetId + ' no encontrado' } }];\n\nconst timestamp = new Date().toISOString();\nconst oldEtapa = existingRow[16] || 'Nuevo';\nconst newEtapa = body.nuevaEtapa || oldEtapa;\nconst stageChanged = oldEtapa !== newEtapa;\nconst registradorEmail = existingRow[14] || '';\nconst registradorNombre = existingRow[15] || '';\nconst referidoNombre = existingRow[4] || '';\nconst referidoEmail = existingRow[6] || '';\n\n// Preparar valores actualizados (columnas Q a X = indices 16-23)\nconst updatedRow = [...existingRow];\nupdatedRow[16] = newEtapa; // Etapa\nupdatedRow[17] = timestamp; // Ultima Actualizacion\nupdatedRow[18] = body.proximoPaso || existingRow[18] || ''; // Proximo Paso\nupdatedRow[19] = body.fechaFollowUp || existingRow[19] || ''; // Fecha Follow-up\nif (newEtapa === 'Cerrado-Ganado') updatedRow[20] = 'Ganado';\nelse if (newEtapa === 'Cerrado-Perdido') updatedRow[20] = 'Perdido';\nupdatedRow[21] = body.razonCierre || existingRow[21] || ''; // Razon Cierre\nif (body.notas) updatedRow[22] = (existingRow[22] || '') + '\\n[' + timestamp.split('T')[0] + '] ' + body.notas;\nupdatedRow[23] = '0'; // Reset dias sin update\n\n// Campos para archivado de cerrados\nconst isClosed = (newEtapa === 'Cerrado-Ganado' || newEtapa === 'Cerrado-Perdido');\nconst targetSheet = newEtapa === 'Cerrado-Ganado' ? 'Exitosos' : (newEtapa === 'Cerrado-Perdido' ? 'Fracasos' : '');\nconst rowIndex0 = rowIndex - 1; // 0-indexed para deleteDimension API\n\nreturn [{ json: {\n  found: true,\n  targetId,\n  rowIndex,\n  stageChanged,\n  oldEtapa,\n  newEtapa,\n  registradorEmail,\n  registradorNombre,\n  referidoNombre,\n  referidoEmail,\n  updatedRow,\n  isClosed,\n  targetSheet,\n  rowIndex0,\n  activityRow: [\n    timestamp,\n    targetId,\n    'Via landing page',\n    oldEtapa,\n    newEtapa,\n    body.notas || '',\n    body.fechaFollowUp || ''\n  ]\n}}];"
